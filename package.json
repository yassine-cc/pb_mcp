{
  "name": "pocketbase-mcp-server",
  "type": "module",
  "version": "2.2.0",
  "description": "MCP server for PocketBase",
  "private": true,
  "main": "dist/index.js",
  "bin": {
    "pb-mcp": "./dist/pb-mcp.js",
    "pb-mcp-http": "./dist/pb-mcp-http.js"
  },
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "tsup",
    "dev": "node --loader ts-node/esm --watch src/index.ts",
    "start:http": "npm run build && node dist/server/http-server.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage"
  },
  "author": "ssakone",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.17.24",
    "@vitest/ui": "^4.0.14",
    "fast-check": "^4.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.8.2",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@toon-format/toon": "^2.0.0",
    "dotenv": "^17.2.0",
    "fastmcp": "^1.21.0",
    "pocketbase": "^0.26.1",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}